#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {

   
   int t;
   scanf("%d",&t);
    while(t--){
        char str[100000];
        scanf("%s",str);
        int count=0;
        int len=strlen(str)-1;
        for(int i=0;i<len;i++){
            if(str[i]==str[i+1])
                count++;
        }
        printf("%d\n",count);
        
        
    }
    
    return 0;
}
